<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TeacherStartUp" >

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="For You"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/discBoardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/welcometext"
        android:layout_below="@+id/welcometext"
        android:text="Calendar" />

    <Button
        android:id="@+id/faqButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/discBoardButton"
        android:layout_below="@+id/discBoardButton"
        android:text="Contacts" />

    <Button
        android:id="@+id/activitiesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/faqButton"
        android:layout_below="@+id/faqButton"
        android:text="Profile" />

    <Button
        android:id="@+id/resourcesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activitiesButton"
        android:layout_alignRight="@+id/activitiesButton"
        android:layout_below="@+id/activitiesButton"
        android:text="Alerts" />

    <TextView
        android:id="@+id/forteaching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/resourcesButton"
        android:layout_below="@+id/resourcesButton"
        android:text="For Teaching" />

    <Button
        android:id="@+id/teachingaids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answerquestions"
        android:layout_alignRight="@+id/answerquestions"
        android:layout_below="@+id/answerquestions"
        android:text="Teaching Aids" />

    <Button
        android:id="@+id/lessonplans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teachingaids"
        android:layout_alignRight="@+id/teachingaids"
        android:layout_below="@+id/teachingaids"
        android:text="Lesson Plans" />

    <Button
        android:id="@+id/answerquestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forteaching"
        android:layout_alignRight="@+id/resourcesButton"
        android:layout_below="@+id/forteaching"
        android:text="Answer Questions" />

    <Button
        android:id="@+id/afterclasssurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lessonplans"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lessonplans"
        android:text="After Class Survey" />

</RelativeLayout>
