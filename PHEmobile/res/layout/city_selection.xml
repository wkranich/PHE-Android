<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bayOak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bay Area - Oakland" />

        <Button
            android:id="@+id/baySF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bay Area - S.F." />

        <Button
            android:id="@+id/bostonMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boston" />

        <Button
            android:id="@+id/bostonOuter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boston - Lynn, Chelsea, Malden, and Revere" />

        <Button
            android:id="@+id/chicago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chicago" />

        <Button
            android:id="@+id/laNorte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L.A. - Norte y Oeste" />

        <Button
            android:id="@+id/laNorth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L.A. - North and East" />

        <Button
            android:id="@+id/laSouth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L.A. - South and West" />

        <Button
            android:id="@+id/laSur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L.A. - Sur y Este" />

        <Button
            android:id="@+id/bronx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New York - Bronx" />

        <Button
            android:id="@+id/brooklyn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New York - Brooklyn" />

        <Button
            android:id="@+id/manhattan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New York - Manhattan" />

        <Button
            android:id="@+id/queens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New York - Queens" />

        <Button
            android:id="@+id/dc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Washington D.C." />
    </LinearLayout>

</ScrollView>